---
interface Props {
  title?: string
  description?: string
}

const { 
  title = 'Infowall.net',
  description = 'Developer blog and project showcase built with SonicJS and Astro'
} = Astro.props

import '../styles/global.css'
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <header class="bg-white shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold text-blue-600 hover:text-blue-700">
            Infowall.net
          </a>
          <div class="space-x-6">
            <a href="/" class="text-gray-700 hover:text-blue-600 transition">Home</a>
            <a href="/articles" class="text-gray-700 hover:text-blue-600 transition">Articles</a>
            <a href="/projects" class="text-gray-700 hover:text-blue-600 transition">Projects</a>
            <a href="/about" class="text-gray-700 hover:text-blue-600 transition">About</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <slot />
    </main>

    <footer class="bg-gray-900 text-gray-300 mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-white text-lg font-semibold mb-4">Infowall.net</h3>
            <p class="text-sm">
              A developer blog and project showcase built with SonicJS and Astro.
            </p>
          </div>
          <div>
            <h3 class="text-white text-lg font-semibold mb-4">Navigation</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/" class="hover:text-white transition">Home</a></li>
              <li><a href="/articles" class="hover:text-white transition">Articles</a></li>
              <li><a href="/projects" class="hover:text-white transition">Projects</a></li>
              <li><a href="/about" class="hover:text-white transition">About</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-white text-lg font-semibold mb-4">Built With</h3>
            <ul class="space-y-2 text-sm">
              <li>SonicJS CMS</li>
              <li>Astro</li>
              <li>Cloudflare Workers</li>
              <li>TailwindCSS</li>
            </ul>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-800 text-center text-sm">
          <p>&copy; {new Date().getFullYear()} Infowall.net. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
